# Docker Environment Variables
# Copy this to .env for local docker-compose usage

# Required Secrets
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
POSTGRES_PASSWORD=your-secure-postgres-password

# API Configuration
DEBUG_MODE=false
CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Anthropic Configuration
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
RATE_LIMIT_REQUESTS_PER_MINUTE=2800
RATE_LIMIT_TOKENS_PER_MINUTE=280000

# Database (for production with PostgreSQL)
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@db:5432/content_jumpstart

# Content Generation
PARALLEL_GENERATION=true
MAX_CONCURRENT_API_CALLS=5
